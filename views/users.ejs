<%- include('./partials/header.ejs'); %>

        <div class="container">
            <main>
                <div class="row">
                    <div class="col-9">
                        <h2>User List</h2>
                    </div>
                    <div class="col-3 text-end">
                        <a class="btn btn-success" href="/users/add">Add</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Contact</th>
                                <th scope="col">Email</th>
                                <th scope="col" class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function(user) { %>
                            <tr id="<%= user._id %>">
                                <td><%= user.name %></td>
                                <td><%= user.mobile %></td>
                                <td><%= user.email %></td>
                                <td class="text-end"><a class="btn btn-warning" href="/users/edit">Edit</a> <button class="btn btn-danger" onclick="deleteUser('<%= user._id %>')">Delete</button></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </main>
        </div>

        <script>

            async function deleteUser(userId) {
                let response = await fetch(`/users/${userId}`, {
                    method: "DELETE"
                });

                let result = await response.json();

                if(result.errors) {

                }
                else {
                    setTimeout(() => {
                        location.reload();
                    }, 500);
                }
            }

        </script>
    
    </body>
</html>
